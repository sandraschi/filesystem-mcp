{
  "manifest_version": "0.2",
  "name": "filesystem-mcp",
  "version": "2.0.0",
  "description": "Comprehensive file system operations, Git repository management, and Docker container management MCP server with enterprise-grade security and Austrian precision",
  "author": "Sandra Schi <sandra@sandraschi.dev>",
  "license": "MIT",
  "homepage": "https://github.com/sandraschi/filesystem-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandraschi/filesystem-mcp"
  },
  "server": {
    "type": "python",
    "entry_point": "src/filesystem_mcp/__main__.py",
    "mcp_config": {
      "command": "python",
      "args": ["-m", "filesystem_mcp"],
      "env": {
        "PYTHONPATH": "${PWD}/src",
        "PYTHONUNBUFFERED": "1"
      }
    }
  },
  "runtime": {
    "python": ">=3.9.0"
  },
  "dependencies": {
    "fastmcp": ">=2.14.1,<3.0.0",
    "pydantic": ">=2.5.0",
    "docker": ">=6.0.0",
    "gitpython": ">=3.1.0",
    "uvicorn": ">=0.24.0",
    "python-multipart": ">=0.0.6",
    "aiohttp": ">=3.9.0",
    "python-dotenv": ">=1.0.0"
  },
  "user_config": {},
  "capabilities": {
    "tools": true,
    "resources": true,
    "prompts": true
  },
  "prompts": {
    "system": "assets/prompts/system.md",
    "file_operations": "assets/prompts/file_operations.md",
    "git_workflows": "assets/prompts/git_workflows.md",
    "docker_management": "assets/prompts/docker_management.md",
    "security_permissions": "assets/prompts/security_permissions.md",
    "troubleshooting": "assets/prompts/troubleshooting.md"
  },
  "features": [
    "File system operations (read, write, list, manage)",
    "Directory scanning (recursive, configurable depth)",
    "File metadata and analysis",
    "Git repository management (clone, commit, status, branches)",
    "Docker container operations (create, start, stop, exec)",
    "Docker image management (pull, build, remove)",
    "Docker networking and volumes",
    "Docker Compose support (deploy, scale, logs)",
    "Enterprise-grade security",
    "Comprehensive error handling",
    "Extensive test coverage",
    "FastMCP 2.14.1+ compliance",
    "Austrian engineering quality"
  ],
  "keywords": [
    "filesystem",
    "files",
    "directories",
    "git",
    "docker",
    "containers",
    "devops",
    "automation",
    "fastmcp",
    "mcp-server",
    "austria"
  ],
  "tools": [
    "read_file",
    "write_file",
    "list_directory",
    "file_exists",
    "get_file_info",
    "head_file",
    "tail_file",
    "grep_file",
    "count_pattern",
    "extract_log_lines",
    "edit_file",
    "read_multiple_files",
    "move_file",
    "read_file_lines",
    "search_files",
    "directory_tree",
    "calculate_directory_size",
    "find_duplicate_files",
    "find_large_files",
    "find_empty_directories",
    "compare_files",
    "create_directory",
    "remove_directory",
    "directory_tree",
    "calculate_directory_size",
    "find_duplicate_files",
    "clone_repo",
    "get_repo_status",
    "list_branches",
    "commit_changes",
    "read_repo",
    "list_containers",
    "get_container",
    "create_container",
    "start_container",
    "stop_container",
    "restart_container",
    "remove_container",
    "container_exec",
    "container_logs",
    "container_stats",
    "list_images",
    "get_image",
    "pull_image",
    "build_image",
    "remove_image",
    "prune_images",
    "list_networks",
    "get_network",
    "create_network",
    "remove_network",
    "prune_networks",
    "list_volumes",
    "get_volume",
    "create_volume",
    "remove_volume",
    "prune_volumes",
    "compose_up",
    "compose_down",
    "compose_ps",
    "compose_logs",
    "compose_config",
    "compose_restart",
    "get_system_info",
    "list_processes",
    "get_process_info",
    "kill_process",
    "get_disk_usage",
    "get_memory_usage",
    "get_network_stats"
  ]
}

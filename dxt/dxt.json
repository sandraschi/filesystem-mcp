{
  "name": "filesystem-mcp",
  "version": "2.0.0",
  "description": "DXT build configuration for filesystem-mcp - FastMCP 2.12 compliant",
  "author": "Sandra Schimanovich <sandra@sandraschi.dev>",
  "license": "MIT",
  "outputDir": "dist",
  "mcp": {
    "version": "2.12.0",
    "server": {
      "command": "python",
      "args": ["-m", "filesystem_mcp"],
      "transport": "stdio"
    },
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true
    }
  },
  "dependencies": {
    "python": ">=3.9.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "python -m build",
    "test": "python -m pytest",
    "lint": "python -m ruff check . && python -m mypy .",
    "format": "python -m black . && python -m isort ."
  },
  "build": {
    "include": [
      "src/**/*",
      "dxt/**/*",
      "requirements.txt",
      "pyproject.toml",
      "README.md"
    ],
    "exclude": [
      "**/__pycache__/**",
      "**/*.pyc",
      "**/.pytest_cache/**",
      "**/.mypy_cache/**",
      "**/tests/**",
      "**/docs/**",
      "**/.git/**",
      "**/node_modules/**"
    ]
  },
  "validation": {
    "strict": true,
    "fail_on_warnings": false
  },
  "signing": {
    "enabled": false,
    "algorithm": "sha256",
    "key_file": "signing.key"
  },
  "registry": {
    "enabled": false,
    "url": "https://registry.dxt.anthropic.com",
    "publish": false
  }
}
